# XTB Dividend Analysis - Environment Configuration Template
# Copy this file to .env and adjust values as needed
# .env file is gitignored and should contain your local configuration

# =============================================================================
# FILE PATHS CONFIGURATION
# =============================================================================

# Default XTB broker statement file to process
# For local development, you can change this to test different files
DEFAULT_INPUT_FILE=data/demo_XTB_broker_statement_currency_PLN.xlsx

# Default output CSV filename for Google Sheets import
DEFAULT_OUTPUT_FILE=for_google_spreadsheet.csv

# Directory containing input data files and currency archives
DATA_DIRECTORY=data


# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# NBP (National Bank of Poland) currency archive URL
# Used for downloading historical exchange rates
NBP_ARCHIVE_URL=https://nbp.pl/statystyka-i-sprawozdawczosc/kursy/archiwum-tabela-a-csv-xls/


# =============================================================================
# TAX CONFIGURATION
# =============================================================================

# Polish Belka tax rate (19% flat tax on capital gains from dividends)
# This is the default rate for Poland - change only if tax law changes
POLISH_TAX_RATE=0.19


# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment: LOCAL, STAGING, or PRODUCTION
ENVIRONMENT=LOCAL

# Enable debug mode (verbose logging)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
